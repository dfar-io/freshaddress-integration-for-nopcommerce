@model Nop.Plugin.Misc.FreshAddressIntegration.Models.FreshAddressIntegrationModel
@{
    Layout = "_ConfigurePlugin";
}

<form asp-controller="FreshAddressIntegration" asp-action="Configure" method="post">
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="CompanyId" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="CompanyId" />
                        <span asp-validation-for="CompanyId"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="ContractId" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="ContractId" />
                        <span asp-validation-for="ContractId"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-9 col-md-offset-3">
                        <input type="submit" name="save" class="btn bg-primary" value="@T("Admin.Common.Save")" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>